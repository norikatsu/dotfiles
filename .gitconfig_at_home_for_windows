[alias]
	co = checkout
	br = branch
	cm = commit
	ci = commit -a
	st = status
	svdc = svn dcommit
	difh = diff HEAD
	diffh = diff HEAD
	svrb = svn rebase
	hint = log --pretty=format:\"%h %ad | %s%d [%an]\" --graph --date=short
